%{!?python_sitelib: %global python_sitelib %(%{__python} -c "from distutils.sysconfig import get_python_lib; print(get_python_lib())")}
%define debug_package %{nil}

Name:           rpmkit
Version:        @VERSION@
Release:        1%{?dist}
Summary:        Misc rpm and yum related utilities
Group:          Development/Tools
License:        GPLv3+
URL:            https://github.com/ssato/rpmkit
Source0:        https://github.com/ssato/rpmkit/tarball/master/%{name}-%{version}.tar.gz
BuildRoot:      %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)
BuildArch:      noarch
BuildRequires:  python
BuildRequires:  /usr/bin/pygettext.py
Requires:       rpm-python
# To support 'list-sec' sub command in yum via yum-surrogate:
Requires:       yum-plugin-security

%description
RpmKit (Rpm toolkit) contains miscellaneous rpm and yum related utilities.

%package        ylc
Summary:        Yum list cache
Group:          Development/Tools
Requires:       %{name} = %{version}-%{release}
Requires:       hardlink
Requires:       httpd
Requires:       yum-plugin-downloadonly
Requires(post): /sbin/service
Requires:       httpd
Requires:       chkconfig

%description    ylc
This package provides yum_makelistcache, its configuration and data files.

%package        swapi
Summary:        Cli frontend for SpaceWalk API
Group:          Development/Tools
Requires:       %{name} = %{version}-%{release}
Requires:       python-BeautifulSoup

%description    swapi
This package provides swapi, cli frontend for SpaceWalk API.

%package        extras
Summary:        Extra and experimental modules and tools in %{name}
Group:          Development/Tools
Requires:       %{name} = %{version}-%{release}
Requires:       dnf
Requires:       python-anyconfig
Requires:       python-bunch
Requires:       graphviz
Requires:       python-networkx
Requires:       libosinfo
# Commented to avoid rpmlint error 'E: explicit-lib-dependency':
#Requires:       python-matplotlib
#Requires:       python-tablib

%description    extras
This package provides experimental modules and tools of %{name}.

%prep
%setup -q

%build
%{__python} setup.py build

%install
rm -rf $RPM_BUILD_ROOT
%{__python} setup.py install -O1 --skip-build --root $RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT%{_localstatedir}/cache/swapi

# Dirty hack:
mkdir -p $RPM_BUILD_ROOT%{_sysconfdir}/rpmkit/optimizer.d/{default,rhel-6-x86_64}
(cd $RPM_BUILD_ROOT%{_sysconfdir}/rpmkit/optimizer.d/default && ln -s ../rhel-6-x86_64/00_server.yml ./)
rm -rf $RPM_BUILD_ROOT/%{python_sitelib}/*.egg-info

%if 0%{?rhel} && 0%{?rhel} <= 5
%clean
rm -rf $RPM_BUILD_ROOT
%endif

%post           ylc
/sbin/service httpd reload >/dev/null 2>&1 || :

%files
%defattr(-,root,root,-)
%doc README.rst
%{_bindir}/buildsrpm
%{_bindir}/identrpm
%{_bindir}/rpm2json
%{_bindir}/rpmfy
%{_bindir}/yum-surrogate
%{_bindir}/yum_updateinfo
%{python_sitelib}/rpmkit/*.py*
%{python_sitelib}/rpmkit/tests/*.py*
%{python_sitelib}/rpmkit/updateinfo/*.py*
%{python_sitelib}/rpmkit/updateinfo/tests/*.py*
%{python_sitelib}/rpmkit/locale/*/LC_MESSAGES/*.mo

%files          ylc
%{_bindir}/yum_makelistcache
%attr(0755,root,root) %{_sysconfdir}/cron.daily/yum_makelistcache.cron
%config(noreplace) %{_sysconfdir}/sysconfig/yum_makelistcache
%config(noreplace) %{_sysconfdir}/httpd/conf.d/yum_makelistcache.conf
%config(noreplace) %{_sysconfdir}/httpd/passwd.d/yum_makelistcache
%{_bindir}/rpmkit-ylc-initial-setup.sh
%{_sysconfdir}/yum_makelistcache.d/*.ini*
%{_localstatedir}/lib/yum_makelistcache/root.d/README

%files          swapi
%doc README.rst
%{_bindir}/swapi
%{_localstatedir}/cache/swapi

%files          extras
%doc README.rst examples
%{_bindir}/rk-*
%{_bindir}/rpmdb_migrate.sh
%{_sysconfdir}/rpmkit/optimizer.d/*/*.yml
%{_datadir}/rpmkit/optimizer/*/*/*.yml
%{_datadir}/rpmkit/templates/*.j2
%{_datadir}/rpmkit/templates/css/*
%{_datadir}/rpmkit/templates/js/*
%{python_sitelib}/rpmkit/extras/*.py*

